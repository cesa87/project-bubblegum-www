.devices-container {
  min-height: 100vh;
  padding: 20px;
  max-width: 1400px;
  margin: 0 auto;
  position: relative;
}

.devices-header {
  margin-bottom: 30px;
  padding: 15px;
  border: 3px double #41ff00;
  background: repeating-linear-gradient(
    90deg,
    transparent,
    transparent 10px,
    rgba(65, 255, 0, 0.02) 10px,
    rgba(65, 255, 0, 0.02) 20px
  );
  position: relative;
}

.devices-header::before {
  content: "▓▓▓ SYSTEM CATALOG ▓▓▓";
  position: absolute;
  top: -12px;
  left: 20px;
  background: #000000;
  padding: 0 10px;
  color: #ffff00;
  font-size: 14px;
  letter-spacing: 2px;
  font-weight: bold;
}

.terminal-prompt {
  font-family: 'VT323', 'Courier New', monospace;
  color: #41ff00;
  margin-bottom: 10px;
  font-size: 20px;
  text-transform: uppercase;
}

.loading-text {
  color: #41ff00;
  font-size: 16px;
  animation: loading-flicker 0.5s infinite;
  text-transform: uppercase;
  letter-spacing: 1px;
}

@keyframes loading-flicker {
  0%, 100% { 
    opacity: 1;
    text-shadow: 0 0 5px #41ff00;
  }
  50% { 
    opacity: 0.7;
    text-shadow: 0 0 2px #41ff00;
  }
}

.devices-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 40px;
  margin-bottom: 40px;
  padding: 20px;
  background: 
    linear-gradient(0deg, rgba(65, 255, 0, 0.01) 0%, transparent 100%),
    repeating-linear-gradient(
      45deg,
      transparent,
      transparent 100px,
      rgba(65, 255, 0, 0.01) 100px,
      rgba(65, 255, 0, 0.01) 101px
    );
  border: 1px solid #1a3300;
}

.devices-list {
  min-height: 500px;
}

.section-title {
  color: #ffff00;
  font-size: 20px;
  margin-bottom: 20px;
  font-weight: normal;
  text-shadow: 
    0 0 5px #ffff00,
    2px 2px 0 #3a3a00;
  text-transform: uppercase;
  letter-spacing: 3px;
  padding: 5px;
  border-bottom: 2px solid #41ff00;
  position: relative;
}

.section-title::after {
  content: "_";
  animation: cursor-blink 0.5s infinite;
}

.device-cards {
  display: flex;
  flex-direction: column;
  gap: 15px;
}

.device-card {
  border: 2px solid #2a8800;
  border-left: 4px solid #41ff00;
  padding: 12px;
  background: 
    linear-gradient(90deg, rgba(65, 255, 0, 0.05) 0%, transparent 50%),
    repeating-linear-gradient(
      0deg,
      #000000 0px,
      #000000 2px,
      #0a0a0a 2px,
      #0a0a0a 4px
    );
  cursor: pointer;
  transition: all 0.1s;
  position: relative;
  clip-path: polygon(0 0, calc(100% - 10px) 0, 100% 10px, 100% 100%, 0 100%);
}

.device-card::after {
  content: "";
  position: absolute;
  top: 0;
  right: 0;
  width: 10px;
  height: 10px;
  background: #41ff00;
  clip-path: polygon(0 0, 100% 0, 100% 100%);
}

.device-card:hover {
  background: 
    linear-gradient(90deg, rgba(255, 255, 0, 0.08) 0%, transparent 50%),
    repeating-linear-gradient(
      0deg,
      #0a0a0a 0px,
      #0a0a0a 2px,
      #1a1a1a 2px,
      #1a1a1a 4px
    );
  transform: translateX(3px) skewX(-1deg);
  box-shadow: 
    -3px 0 0 #41ff00,
    0 0 20px rgba(65, 255, 0, 0.4);
  border-left-width: 6px;
}

.device-card.selected {
  background: 
    linear-gradient(90deg, rgba(255, 255, 0, 0.1) 0%, rgba(65, 255, 0, 0.05) 100%),
    repeating-linear-gradient(
      0deg,
      #0a1a0a 0px,
      #0a1a0a 2px,
      #1a2a1a 2px,
      #1a2a1a 4px
    );
  border: 2px solid #ffff00;
  border-left: 6px solid #ffff00;
  box-shadow: 
    -4px 0 0 #ffff00,
    0 0 30px rgba(255, 255, 0, 0.3),
    inset 0 0 20px rgba(65, 255, 0, 0.1);
}

.device-card.selected::before {
  content: '▶';
  position: absolute;
  left: -20px;
  color: #ffff00;
  font-size: 16px;
  animation: arrow-pulse 0.5s infinite;
}

@keyframes arrow-pulse {
  0%, 100% { transform: translateX(0); }
  50% { transform: translateX(3px); }
}

@keyframes cursor-blink {
  0%, 49% { opacity: 1; }
  50%, 100% { opacity: 0; }
}

.device-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10px;
}

.device-name {
  color: #41ff00;
  font-size: 18px;
  font-weight: normal;
  text-transform: uppercase;
  letter-spacing: 1px;
  text-shadow: 
    0 0 3px #41ff00,
    1px 1px 0 #1a3300;
}

.device-status {
  padding: 3px 10px;
  font-size: 12px;
  font-weight: bold;
  animation: status-blink 1s infinite;
  text-transform: uppercase;
  letter-spacing: 1px;
  border: 1px solid;
  position: relative;
}

.device-status::before {
  content: "[";
  margin-right: 2px;
}

.device-status::after {
  content: "]";
  margin-left: 2px;
}

.device-status.new {
  background: linear-gradient(90deg, #ffff00 0%, #41ff00 100%);
  color: #000;
  border-color: #ffff00;
  text-shadow: none;
  box-shadow: 0 0 10px #ffff00;
}

.device-status.popular {
  background: linear-gradient(90deg, #00ffff 0%, #0099ff 100%);
  color: #000;
  border-color: #00ffff;
  text-shadow: none;
  box-shadow: 0 0 10px #00ffff;
}

.device-status.limited {
  background: linear-gradient(90deg, #ff6600 0%, #ffaa00 100%);
  color: #000;
  border-color: #ff9900;
  text-shadow: none;
  box-shadow: 0 0 10px #ff9900;
}

@keyframes status-blink {
  0%, 90%, 100% { opacity: 1; }
  95% { opacity: 0.5; }
}

.device-info {
  margin-bottom: 10px;
}

.device-line {
  color: #41ff00;
  font-size: 14px;
  margin: 5px 0;
  padding-left: 10px;
  position: relative;
  text-transform: uppercase;
}

.device-line::before {
  content: ">";
  position: absolute;
  left: 0;
  color: #ffff00;
}

.label {
  color: #2a8800;
  margin-right: 10px;
  font-weight: bold;
}

.price {
  color: #ffff00;
  font-weight: bold;
  text-shadow: 
    0 0 5px #ffff00,
    1px 1px 0 #3a3a00;
  animation: price-glow 2s infinite;
}

@keyframes price-glow {
  0%, 100% { 
    text-shadow: 
      0 0 5px #ffff00,
      1px 1px 0 #3a3a00;
  }
  50% { 
    text-shadow: 
      0 0 10px #ffff00,
      0 0 20px #ffff00,
      1px 1px 0 #3a3a00;
  }
}

.availability {
  color: #41ff00;
  font-size: 12px;
  padding: 2px 4px;
  background: rgba(65, 255, 0, 0.1);
  border: 1px dotted #41ff00;
}

.device-features {
  margin-top: 10px;
  padding-top: 10px;
  border-top: 2px dotted #2a8800;
  background: repeating-linear-gradient(
    180deg,
    transparent,
    transparent 15px,
    rgba(65, 255, 0, 0.01) 15px,
    rgba(65, 255, 0, 0.01) 16px
  );
}

.feature-item {
  color: #41ff00;
  font-size: 12px;
  margin: 4px 0;
  text-transform: uppercase;
  letter-spacing: 0.5px;
  position: relative;
  padding-left: 15px;
}

.feature-marker {
  color: #ffff00;
  margin-right: 5px;
  font-weight: bold;
  position: absolute;
  left: 0;
  animation: marker-flash 2s infinite;
}

@keyframes marker-flash {
  0%, 80%, 100% { opacity: 1; }
  90% { opacity: 0.3; }
}

/* Device Details Panel */
.device-details {
  border: 3px solid #41ff00;
  padding: 20px;
  background: 
    linear-gradient(135deg, rgba(65, 255, 0, 0.03) 0%, transparent 50%),
    repeating-linear-gradient(
      90deg,
      #000000,
      #000000 50px,
      #0a0a0a 50px,
      #0a0a0a 51px
    );
  position: sticky;
  top: 100px;
  box-shadow: 
    inset 0 0 30px rgba(65, 255, 0, 0.1),
    0 0 20px rgba(65, 255, 0, 0.3);
  clip-path: polygon(
    0 0, 
    calc(100% - 15px) 0, 
    100% 15px, 
    100% 100%, 
    15px 100%, 
    0 calc(100% - 15px)
  );
}

.device-details::before {
  content: "◆ DEVICE SPECIFICATIONS ◆";
  position: absolute;
  top: -15px;
  left: 50%;
  transform: translateX(-50%);
  background: #000000;
  padding: 2px 15px;
  color: #ffff00;
  font-size: 12px;
  letter-spacing: 2px;
  border: 1px solid #41ff00;
  text-shadow: 0 0 5px #ffff00;
}

.details-content {
  margin-top: 20px;
}

.ascii-device {
  text-align: center;
  margin-bottom: 30px;
}

.ascii-device pre {
  color: #41ff00;
  font-size: 14px;
  line-height: 1.1;
  text-shadow: 
    0 0 5px #41ff00,
    0 0 10px #41ff00,
    2px 2px 0 #1a3300;
  display: inline-block;
  font-family: 'VT323', monospace;
  animation: device-flicker 5s infinite;
}

@keyframes device-flicker {
  0%, 94%, 100% { 
    opacity: 1;
    color: #41ff00;
  }
  95% { 
    opacity: 0.9;
    color: #ffff00;
  }
  96% { 
    opacity: 1;
    color: #41ff00;
  }
}

.specs-section {
  margin-top: 20px;
}

.specs-button {
  width: 100%;
  margin-bottom: 20px;
}

.specs-list {
  background: linear-gradient(180deg, #0a0a0a 0%, #000000 100%);
  border: 2px solid #41ff00;
  border-left: 4px solid #ffff00;
  padding: 15px;
  margin-bottom: 20px;
  animation: slideDown 0.3s ease-out;
  box-shadow: 
    inset 0 1px 0 rgba(65, 255, 0, 0.2),
    inset 0 -1px 0 rgba(65, 255, 0, 0.2),
    0 5px 10px rgba(0, 0, 0, 0.5);
  position: relative;
}

.specs-list::before {
  content: "[DATA]";
  position: absolute;
  top: -10px;
  left: 10px;
  background: #000000;
  padding: 0 5px;
  color: #ffff00;
  font-size: 12px;
  font-weight: bold;
}

@keyframes slideDown {
  from {
    opacity: 0;
    transform: translateY(-10px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.spec-line {
  display: flex;
  justify-content: space-between;
  margin: 8px 0;
  padding: 6px 8px;
  border-bottom: 1px dotted #2a8800;
  background: repeating-linear-gradient(
    90deg,
    transparent,
    transparent 30px,
    rgba(65, 255, 0, 0.02) 30px,
    rgba(65, 255, 0, 0.02) 31px
  );
  transition: all 0.1s;
}

.spec-line:hover {
  background: rgba(65, 255, 0, 0.05);
  padding-left: 15px;
}

.spec-key {
  color: #2a8800;
  text-transform: uppercase;
  font-size: 13px;
  font-weight: bold;
  letter-spacing: 1px;
}

.spec-value {
  color: #ffff00;
  font-size: 13px;
  text-align: right;
  text-transform: uppercase;
  text-shadow: 0 0 3px #ffff00;
}

.price-section {
  margin: 20px 0;
  padding: 15px;
  border: 3px double #ffff00;
  background: 
    linear-gradient(45deg, rgba(255, 255, 0, 0.05) 0%, transparent 50%),
    repeating-linear-gradient(
      0deg,
      #000000,
      #000000 10px,
      #0a0a00 10px,
      #0a0a00 11px
    );
  position: relative;
  box-shadow: 
    inset 0 0 20px rgba(255, 255, 0, 0.1),
    0 0 15px rgba(255, 255, 0, 0.2);
}

.price-section::before {
  content: "$$$ PRICING $$$";
  position: absolute;
  top: -12px;
  left: 50%;
  transform: translateX(-50%);
  background: #000000;
  padding: 0 10px;
  color: #ffff00;
  font-size: 12px;
  letter-spacing: 2px;
  animation: price-flash 1s infinite;
}

@keyframes price-flash {
  0%, 70%, 100% { color: #ffff00; }
  85% { color: #41ff00; }
}

.price-display {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15px;
}

.price-label {
  color: #41ff00;
  font-size: 20px;
  text-transform: uppercase;
  letter-spacing: 2px;
}

.price-value {
  color: #ffff00;
  font-size: 32px;
  font-weight: bold;
  text-shadow: 
    0 0 10px #ffff00,
    0 0 20px #ffff00,
    2px 2px 0 #3a3a00,
    3px 3px 0 #2a2a00;
  animation: price-pulse 1s infinite;
  font-family: 'VT323', monospace;
  letter-spacing: 2px;
}

@keyframes price-pulse {
  0%, 100% { 
    transform: scale(1);
    text-shadow: 
      0 0 10px #ffff00,
      0 0 20px #ffff00,
      2px 2px 0 #3a3a00,
      3px 3px 0 #2a2a00;
  }
  50% { 
    transform: scale(1.05);
    text-shadow: 
      0 0 15px #ffff00,
      0 0 30px #ffff00,
      2px 2px 0 #3a3a00,
      3px 3px 0 #2a2a00;
  }
}

.price-note {
  color: #41ff00;
  font-size: 12px;
  line-height: 1.8;
  text-transform: uppercase;
  letter-spacing: 0.5px;
  padding-left: 15px;
  position: relative;
}

.price-note::before {
  content: "*";
  position: absolute;
  left: 5px;
  color: #ffff00;
  animation: cursor-blink 1s infinite;
}

.cta-buttons {
  display: flex;
  gap: 15px;
  margin-top: 20px;
}

.cta-buttons .terminal-button {
  flex: 1;
}

.order-button {
  background: linear-gradient(180deg, #1a1a00 0%, #0a0a00 100%);
  border: 2px solid #ffff00;
  color: #ffff00;
  text-shadow: 0 0 5px #ffff00;
  box-shadow: 
    0 3px 0 #3a3a00,
    0 4px 10px rgba(255, 255, 0, 0.3);
}

.order-button:hover {
  background: linear-gradient(180deg, #3a3a00 0%, #2a2a00 100%);
  border-color: #ffff00;
  color: #000000;
  text-shadow: none;
  box-shadow: 
    0 3px 0 #ffff00,
    0 0 30px rgba(255, 255, 0, 0.5),
    inset 0 0 20px rgba(255, 255, 0, 0.8);
}

.devices-footer {
  margin-top: 40px;
  padding-top: 20px;
  border-top: 1px solid #00ff00;
}

/* Responsive Design */
@media (max-width: 1024px) {
  .devices-grid {
    grid-template-columns: 1fr;
  }
  
  .device-details {
    position: relative;
    top: 0;
    margin-top: 30px;
  }
}

@media (max-width: 768px) {
  .devices-container {
    padding: 10px;
  }
  
  .device-card {
    padding: 10px;
  }
  
  .cta-buttons {
    flex-direction: column;
  }
  
  .device-card.selected::before {
    display: none;
  }
}

/* Animations */
@keyframes blink {
  0%, 50% {
    opacity: 1;
  }
  51%, 100% {
    opacity: 0.3;
  }
}

@keyframes pulse {
  0%, 100% {
    opacity: 1;
  }
  50% {
    opacity: 0.6;
  }
}