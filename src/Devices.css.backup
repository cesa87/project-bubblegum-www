.devices-container {
  min-height: 100vh;
  padding: 20px;
  max-width: 1400px;
  margin: 0 auto;
}

.devices-header {
  margin-bottom: 30px;
  padding-bottom: 20px;
  border-bottom: 1px solid #00ff00;
}

.terminal-prompt {
  font-family: 'Courier New', monospace;
  color: #00ff00;
  margin-bottom: 10px;
}

.loading-text {
  color: #00cc00;
  font-size: 14px;
  animation: pulse 2s infinite;
}

.devices-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 40px;
  margin-bottom: 40px;
}

.devices-list {
  min-height: 500px;
}

.section-title {
  color: #00ff00;
  font-size: 18px;
  margin-bottom: 20px;
  font-weight: bold;
  text-shadow: 0 0 10px #00ff00;
}

.device-cards {
  display: flex;
  flex-direction: column;
  gap: 15px;
}

.device-card {
  border: 1px solid #00ff00;
  padding: 15px;
  background: rgba(0, 255, 0, 0.02);
  cursor: pointer;
  transition: all 0.3s;
  position: relative;
}

.device-card:hover {
  background: rgba(0, 255, 0, 0.05);
  transform: translateX(5px);
  box-shadow: 0 0 20px rgba(0, 255, 0, 0.3);
}

.device-card.selected {
  background: rgba(0, 255, 0, 0.1);
  border-width: 2px;
  box-shadow: 0 0 30px rgba(0, 255, 0, 0.5);
}

.device-card.selected::before {
  content: '>';
  position: absolute;
  left: -15px;
  color: #00ff00;
  font-weight: bold;
  animation: blink 1s infinite;
}

.device-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10px;
}

.device-name {
  color: #00ff00;
  font-size: 16px;
  font-weight: bold;
}

.device-status {
  padding: 2px 8px;
  font-size: 11px;
  font-weight: bold;
  animation: blink 2s infinite;
}

.device-status.new {
  background: #00ff00;
  color: #000;
}

.device-status.popular {
  background: #00ccff;
  color: #000;
}

.device-status.limited {
  background: #ff9900;
  color: #000;
}

.device-info {
  margin-bottom: 10px;
}

.device-line {
  color: #00cc00;
  font-size: 13px;
  margin: 5px 0;
}

.label {
  color: #008800;
  margin-right: 10px;
}

.price {
  color: #00ff00;
  font-weight: bold;
}

.availability {
  color: #00ff00;
  font-size: 12px;
}

.device-features {
  margin-top: 10px;
  padding-top: 10px;
  border-top: 1px solid #003300;
}

.feature-item {
  color: #00aa00;
  font-size: 12px;
  margin: 3px 0;
}

.feature-marker {
  color: #00ff00;
  margin-right: 5px;
}

/* Device Details Panel */
.device-details {
  border: 2px solid #00ff00;
  padding: 20px;
  background: rgba(0, 255, 0, 0.02);
  position: sticky;
  top: 100px;
}

.details-content {
  margin-top: 20px;
}

.ascii-device {
  text-align: center;
  margin-bottom: 30px;
}

.ascii-device pre {
  color: #00ff00;
  font-size: 12px;
  line-height: 1.2;
  text-shadow: 0 0 10px #00ff00;
  display: inline-block;
}

.specs-section {
  margin-top: 20px;
}

.specs-button {
  width: 100%;
  margin-bottom: 20px;
}

.specs-list {
  background: #000;
  border: 1px solid #00ff00;
  padding: 15px;
  margin-bottom: 20px;
  animation: slideDown 0.3s ease-out;
}

@keyframes slideDown {
  from {
    opacity: 0;
    transform: translateY(-10px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.spec-line {
  display: flex;
  justify-content: space-between;
  margin: 8px 0;
  padding: 5px 0;
  border-bottom: 1px solid #003300;
}

.spec-key {
  color: #008800;
  text-transform: uppercase;
  font-size: 12px;
}

.spec-value {
  color: #00ff00;
  font-size: 12px;
  text-align: right;
}

.price-section {
  margin: 20px 0;
  padding: 20px;
  border: 1px solid #00ff00;
  background: rgba(0, 255, 0, 0.05);
}

.price-display {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15px;
}

.price-label {
  color: #00ff00;
  font-size: 18px;
}

.price-value {
  color: #00ff00;
  font-size: 24px;
  font-weight: bold;
  text-shadow: 0 0 20px #00ff00;
  animation: pulse 2s infinite;
}

.price-note {
  color: #00aa00;
  font-size: 12px;
  line-height: 1.6;
}

.cta-buttons {
  display: flex;
  gap: 15px;
  margin-top: 20px;
}

.cta-buttons .terminal-button {
  flex: 1;
}

.order-button {
  background: rgba(0, 255, 0, 0.1);
  border-color: #00ff00;
}

.order-button:hover {
  background: #00ff00;
  color: #000;
}

.devices-footer {
  margin-top: 40px;
  padding-top: 20px;
  border-top: 1px solid #00ff00;
}

/* Responsive Design */
@media (max-width: 1024px) {
  .devices-grid {
    grid-template-columns: 1fr;
  }
  
  .device-details {
    position: relative;
    top: 0;
    margin-top: 30px;
  }
}

@media (max-width: 768px) {
  .devices-container {
    padding: 10px;
  }
  
  .device-card {
    padding: 10px;
  }
  
  .cta-buttons {
    flex-direction: column;
  }
  
  .device-card.selected::before {
    display: none;
  }
}

/* Animations */
@keyframes blink {
  0%, 50% {
    opacity: 1;
  }
  51%, 100% {
    opacity: 0.3;
  }
}

@keyframes pulse {
  0%, 100% {
    opacity: 1;
  }
  50% {
    opacity: 0.6;
  }
}